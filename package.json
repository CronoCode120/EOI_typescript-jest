{
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "resetMocks": false
    },
    "author": "lazyants",
    "devDependencies": {
        "@types/jest": "^28.1.1",
        "jest": "^28.1.1",
        "ts-jest": "^28.0.5",
        "typescript": "^4.7.3"
    }
}
